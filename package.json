{
  "name": "codebase-search",
  "version": "0.1.0",
  "private": true,
  "description": "Intelligent codebase search with TF-IDF - Core library and MCP server",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,json,md}\"",
    "docs:dev": "cd docs && bun run docs:dev",
    "docs:build": "cd docs && bun run docs:build",
    "docs:preview": "cd docs && bun run docs:preview",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.6.0",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.24"
  },
  "packageManager": "bun@1.3.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "codebase-search",
    "tfidf",
    "search",
    "indexing",
    "mcp",
    "model-context-protocol"
  ],
  "author": "SylphxAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SylphxAI/codebase-search.git"
  }
}
